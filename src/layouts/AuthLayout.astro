---
import "../styles/global.css";
import { ToastProvider } from "@/components/ui/ToastProvider";

interface Props {
  title?: string;
  description?: string;
}

const { title = "10xDevs — Autoryzacja", description = "Zaloguj się lub utwórz konto 10xDevs" }: Props = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body class="bg-muted/60 text-foreground antialiased">
    <a
      href="#auth-content"
      class="skip-link fixed left-4 top-4 z-50 -translate-y-24 rounded-full bg-primary px-4 py-2 text-sm font-semibold text-primary-foreground transition focus-visible:translate-y-0 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary/70"
    >
      Pomiń do treści głównej
    </a>
    <main class="flex min-h-screen flex-col items-center justify-center px-4 py-10">
      <a
        href="/"
        class="mb-8 flex items-center gap-3 text-lg font-semibold text-foreground transition hover:text-primary focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-4 focus-visible:outline-primary"
      >
        <span
          class="flex size-11 items-center justify-center rounded-2xl bg-primary/10 text-base font-bold text-primary"
        >
          10x
        </span>
        <span>10xDevs</span>
      </a>
      <div id="auth-content" tabindex="-1" class="w-full max-w-md">
        <slot />
        <p class="mt-6 text-center text-sm text-muted-foreground">
          <a class="font-medium text-primary hover:underline" href="/"> Wróć do strony głównej </a>
        </p>
      </div>
    </main>
    <ToastProvider client:load />
  </body>
</html>
