---
import Layout from "../layouts/Layout.astro";
import { FlashcardsView } from "@/components/flashcards/FlashcardsView";

const { user } = Astro.locals;

if (!user) {
  return Astro.redirect("/login");
}
---

<Layout title="Moje fiszki">
  <main
    id="flashcards-main"
    class="mx-auto flex min-h-[80vh] w-full max-w-6xl flex-col gap-10 px-4 py-12 lg:py-16"
    aria-labelledby="flashcards-heading"
  >
    <section class="text-center">
      <p class="text-xs font-semibold uppercase tracking-[0.3em] text-primary/80">Twoja kolekcja</p>
      <h1 id="flashcards-heading" class="mt-3 text-3xl font-bold tracking-tight text-foreground md:text-4xl">
        Zarządzaj swoimi fiszkami
      </h1>
      <p class="mt-4 text-base text-muted-foreground md:text-lg">
        Przeglądaj zapisane fiszki, dodawaj nowe i usuwaj te, których już nie potrzebujesz. Widok dostosowuje się do
        Twojego urządzenia, aby zapewnić maksymalną czytelność.
      </p>
    </section>
    <FlashcardsView client:load />
  </main>
</Layout>
